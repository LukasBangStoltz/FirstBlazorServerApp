<GridAutoComponent CSSClass="table is-bordered is-striped is-narrow is-hoverable is-fullwidth" Items="employees" ColumnsToExcludeCSV="Id"></GridAutoComponent>
@code{
    private List<Employee> employees;
    protected override void OnInitialized()
    {
        base.OnInitialized();
        employees = new List<Employee>();
        employees.AddRange(new Employee[3]
        {
            new Employee{Id = 1, Name = "john", Title = "Dev", Department = "dev department"},
            new Employee{Id = 2, Name = "bob", Title = "Dev", Department = "dev department"},
            new Employee{Id = 3, Name = "frans", Title = "Dev", Department = "dev department"},
        });

    }

    public class Employee
    {
        public int Id { get; set; }
        public string Name { get; set; }    
        public string Title { get; set; }
        public string Department { get; set; }
    }

}
